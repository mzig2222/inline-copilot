{
  "name": "inline-copilot-extension",
  "private": true,
  "version": "0.1.0",
  "type": "module",
  "scripts": {
    "build:main": "vite build",
    "build:content": "vite build --config vite.content.config.ts",
    "build:popup": "vite build --config vite.popup.config.ts",
    "build:all": "npm run build:main && npm run build:content && npm run build:popup && cp dist-content/content.js dist/content.js && cp dist-popup/popup.js dist/popup.js",
    "clean": "rm -rf dist",
    "dev:zip": "npm run build && cd dist && zip -r ../inline-copilot-extension.zip ."
  },
  "dependencies": {
    "@prisma/client": "^6.18.0",
    "jsonwebtoken": "^9.0.2",
    "react": "^18.3.1",
    "react-dom": "^18.3.1"
  },
  "devDependencies": {
    "@types/chrome": "^0.0.279",
    "@types/react": "^18.2.66",
    "@types/react-dom": "^18.2.22",
    "@vitejs/plugin-react": "^4.3.1",
    "typescript": "^5.5.4",
    "vite": "^5.2.0"
  }
}
