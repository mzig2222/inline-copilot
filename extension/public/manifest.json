{
  "manifest_version": 3,
  "name": "Inline Copilot",
  "version": "0.1.0",
  "description": "Inline chat overlay with GPT streaming",
  "permissions": ["scripting", "activeTab", "storage"],
  "background": {
    "service_worker": "worker.js",
    "type": "module"
  },
  "action": {
    "default_title": "Inline Copilot"
  },
  "commands": {
    "toggle-overlay": {
      "suggested_key": {
        "default": "Ctrl+Shift+K",
        "mac": "Command+Shift+K"
      },
      "description": "Toggle overlay"
    }
  },
  "host_permissions": ["http://localhost:3000/*"],
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  }
}
